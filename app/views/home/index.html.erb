<%= @error %>
<br>
<%= form_for @post do |p| %>
<%= p.text_area :text, placeholder:"What's on your mind?", size:"70x5"%>
<br>
<%= p.submit "Post!"%>
<% end %>
<% @all_posts.reverse.each do |p|%>
<br>
<%= p.user.name %>:
<br>
<%= p.text %>
<br>
<%= p.created_at %>
<br>
<% p.comments.each do |c|%>
<%= c.user.name %>: <%= c.text %>
<br>
<% end %>

<br>
	<%= form_for @comment do |c|%>
	<%= c.text_field :text %>
	<%= c.hidden_field :post_id, value:p.id %>
	<%= c.submit "Comment" %>
	<% end %>
<% end %>